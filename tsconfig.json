{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["es2018", "webworker"],
    "jsx": "react",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": ["./definitions"],
    "baseUrl": "."
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.tsx", "src/**/*.tsx"]
}
